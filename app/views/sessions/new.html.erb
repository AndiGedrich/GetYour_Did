<div id="container">
  <div id="wrapper">
<% @user = User.new %>

<%= form_for(:session, url: login_path) do |f| %>

  <% flash.each do |key,value| %>
    <div class="<%= key %>" > <%= value %></div>
  <% end %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit "Login" %>
  <%= link_to "Cancel", :back %>
<% end %>
</div>
</div>
